{% extends "layouts/master.twig" %}

{% block content %}
<ol class="breadcrumb">
    <li><a href="/">Oakley Sunglasses</a></li>
</ol>
<h1>{{ product.name }}</h1>
<img src="/media/{{ product.image }}" alt="{{ product.name }}" class="product-image" width="300">
<div>
    <span class="price">{{ product.formatPrice()|raw }}</span>
    <span class="availability">In Stock</span>
</div>
<form action="/cart/add/{{ product.id }}" method="POST">
    <button class="btn btn-lg btn-success" type="submit">Add to Basket</button>
</form>
<div class="product-extra">
    {{ product.description|raw }}
</div>
{% endblock %}
